<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.teamcurrentsource.android.opensourcebookapplication.MainActivity"
    tools:showIn="@layout/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/book_stack"
            android:onClick="onClickGetFavorites"
            android:background="#ffff99"/>
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#b3ffff"
            android:src="@drawable/search3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_arrow"
            android:background="#ffff4d"
            android:layout_weight="1"
            android:paddingRight="30dp"
            android:text="Suosikit"/>
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_no_line_arrow"
            android:background="#80e5ff"
            android:paddingRight="30dp"
            android:text="Haku"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/swipe"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:background="#d9d9d9"/>
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#adebad"
            android:onClick="onClickGetCategories"
            android:src="@drawable/page"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_no_line_arrow"
            android:background="#ccccb3"
            android:layout_weight="1"
            android:paddingRight="30dp"
            android:text="Selaa"/>
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/categoryBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/ic_no_line_arrow"
            android:background="#6fdc6f"
            android:paddingRight="30dp"
            android:onClick="onClickGetCategories"
            android:text="Katerogiat"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn22"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"

            android:src="@drawable/ext_32"
            android:background="#e6e6e6"/>
    </LinearLayout>


</LinearLayout>

